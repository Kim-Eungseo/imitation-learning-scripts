[flake8]
# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    outputs,
    data,
    datasets

# Ignore specific error codes
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504,  # line break after binary operator
    E402,  # module level import not at top of file
    F401,  # imported but unused (sometimes needed for __init__.py)

# Maximum complexity
max-complexity = 10

# Show source code for errors
show-source = True

# Show pep8 violation statistics
statistics = True

# Count errors
count = True

